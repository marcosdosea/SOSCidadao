@model Core.DTO.ComentarioDTO

@{
    ViewData["Title"] = "Remover Comentario";
    Layout = "_LayoutDashboard";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Data Cadastro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Ocorrência
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdOcorrencia)
        </dd>
        <dt class="col-sm-2">
            Responsável
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePessoa)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>