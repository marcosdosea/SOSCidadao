@model IEnumerable<Core.DTO.ComentarioDTO>

@{
    ViewData["Title"] = "Listar Comentario";
    Layout = "_LayoutDashboard";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nº Cadastral
            </th>
            <th>
                Data Cadastro
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                Ocorrencia
            </th>
            <th>
                Responsável
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdComentario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOcorrencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomePessoa)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdComentario }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdComentario }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.IdComentario })
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5" class=" text-center">
                <h4 class="p-5">Não foram encontrados registros no momento.</h4>
            </td>
        </tr>
    }
</table>
