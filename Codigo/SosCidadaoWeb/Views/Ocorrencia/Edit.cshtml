@model SosCidadaoWeb.Models.OcorrenciaModel

@{
    ViewData["Title"] = "Editar Ocorrência";
    Layout = "_LayoutDashboard";
}

<form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdOcorrencia" class="control-label"></label>
                <input asp-for="IdOcorrencia" class="form-control" />
                <span asp-validation-for="IdOcorrencia" class="text-danger">Nº da Ocorrência</span>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger">Data de cadastro</span>
            </div>
            <div class="form-group">
                <label asp-for="StatusOcorrencia" class="control-label"></label>
                <input asp-for="StatusOcorrencia" class="form-control" />
                <span asp-validation-for="StatusOcorrencia" class="text-danger">Status</span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger">Descrição</span>
            </div>
            <div class="form-group">
                <label asp-for="Emergencia" class="control-label"></label>
                <input asp-for="Emergencia" class="form-control" />
                <span asp-validation-for="Emergencia" class="text-danger">Tipo da emergência</span>
            </div>
            <div class="form-group">
                <label asp-for="IdLocal" class="control-label"></label>
                <input asp-for="IdLocal" class="form-control" />
                <span asp-validation-for="IdLocal" class="text-danger">Local</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
