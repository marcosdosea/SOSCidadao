@model Core.DTO.OcorrenciaDTO

@{
    ViewData["Title"] = "Detalhes da Ocorrência";
    Layout = "_LayoutDashboard";
}


<div>
    
    <dl class="row">
        <dt class="col-sm-2">
            Nº de Cadastro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdOcorrencia)
        </dd>
        <dt class="col-sm-2">
            Data da Ocorrência
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusOcorrencia)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Tipo de Emergência
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Emergencia)
        </dd>
        <dt class="col-sm-2">
            Local
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdLocal)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdOcorrencia }) |
    <a asp-action="Index">Voltar</a>
</div>
