@model Core.DTO.OcorrenciaDTO

@{
    ViewData["Title"] = "Remover Ocorrência";
    Layout = "_LayoutDashboard";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nº de Cadastro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdOcorrencia)
        </dd>
        <dt class="col-sm-2">
            Data da Ocorrência
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusOcorrencia)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
           Tipo de Emergência
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Emergencia)
        </dd>
        <dt class="col-sm-2">
            Local
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdLocal)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
