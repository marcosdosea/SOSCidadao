@model Core.DTO.PertenceDTO

@{
    ViewData["Title"] = "Remover Pertence";
    Layout = "_LayoutDashboard";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusPertence)
        </dd>
        <dt class="col-sm-2">
            Ocorrencia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdOcorrencia)
        </dd>
        <dt class="col-sm-2">
            Tipo Pertence
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePertence)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>