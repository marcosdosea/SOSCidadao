@model SosCidadaoWeb.Models.LocalModel

@{
    ViewData["Title"] = "Criar Local";
    Layout = "_LayoutDashboard";
}


<form asp-action="Create" class="row">
    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="col-md-5">
        <div class="row d-flex justify-content-end">
            <div class="form-group col-8">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
        </div>
        <div class="row d-flex justify-content-end">
            <div class="form-group col-8">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
        </div>
        <div class="row d-flex justify-content-end">
            <div class="form-group col-8">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group col-8">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
        </div>
        <div class="row d-flex justify-content-end">
            <div class="form-group col-8">
                <a asp-action="Index" class="btn btn-outline-danger pointer">Voltar</a>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="row d-flex justify-content-start">
            <div class="form-group col-2">
                <label asp-for="Uf" class="control-label"></label>
                <input asp-for="Uf" class="form-control" />
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
        </div>

        <div class="row d-flex justify-content-start">
            <div class="form-group col-6">
                <label asp-for="Rua" class="control-label"></label>
                <input asp-for="Rua" class="form-control" />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="NumeroEndereco" class="control-label"></label>
                <input asp-for="NumeroEndereco" class="form-control" />
                <span asp-validation-for="NumeroEndereco" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="form-group col-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="form-group col-6">
                <label asp-for="IdOrganizacao" class="control-label"></label>
                <select asp-for="IdOrganizacao" asp-items="ViewBag.IdOrganizacao" class="form-control"></select>
                <span asp-validation-for="IdOrganizacao" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="form-group col-6">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
