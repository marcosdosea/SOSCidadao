@model IEnumerable<SosCidadaoWeb.Models.TipoocorrenciaModel>

@{
    ViewData["Title"] = "Listar Tipo Ocorrencia";
    Layout = "_LayoutDashboard";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoOcorrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOrganizacao)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoOcorrencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOrganizacao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdTipoOcorrencia }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdTipoOcorrencia }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.IdTipoOcorrencia })
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class=" text-center">
                <h4 class="p-5">Não foram encontrados registros no momento.</h4>
            </td>
        </tr>
    }
</table>