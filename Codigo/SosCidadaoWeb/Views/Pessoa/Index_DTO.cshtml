@model IEnumerable<Core.DTO.PessoaDTO>

@{
    ViewData["Title"] = "Listar Pessoa";
    Layout = "_LayoutDashboard";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nº Cadastral
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                Tipo
            </th>
            <th>
                Status
            </th>
            <th>
                Organizacao
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPessoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPessoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusPessoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeOrganizacao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdPessoa }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdPessoa }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.IdPessoa })
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="9" class=" text-center">
                <h4 class="p-5">Não foram encontrados registros no momento.</h4>
            </td>
        </tr>
    }
</table>