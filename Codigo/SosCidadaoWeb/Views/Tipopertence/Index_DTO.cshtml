@model IEnumerable<Core.DTO.TipopertenceDTO>

@{
    ViewData["Title"] = "Listar Tipo Pertence";
    Layout = "_LayoutDashboard";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nº Cadastral
            </th>
            <th>
                Tipo Pertence
            </th>
            <th>
                Nome Organizacao
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoPertence)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeOrganizacao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdTipoPertence }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdTipoPertence }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.IdTipoPertence })
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class=" text-center">
                <h4 class="p-5">Não foram encontrados registros no momento.</h4>
            </td>
        </tr>
    }
</table>