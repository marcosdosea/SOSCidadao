@model IEnumerable<Core.DTO.OrganizacaoDTO>

@{
    ViewData["Title"] = "Listar Organização";
    Layout = "_LayoutDashboard";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nº Cadastral
            </th>
            <th>
                Nome
            </th>
            <th>
                CEP
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                Estado
            </th>
            <th>
                Responsável
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOrganizacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeRazao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomePessoa)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdOrganizacao }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdOrganizacao }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.IdOrganizacao })
                </td>
            </tr>
        }
    </tbody>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="9" class=" text-center">
                <h4 class="p-5">Não foram encontrados registros no momento.</h4>
            </td>
        </tr>
    }
</table>